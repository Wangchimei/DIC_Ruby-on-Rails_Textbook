<h2>New Contact Information</h2>

<%= form_with(model: @contact, local: true) do |form| %>

<% if @contact.errors.any? %>
  <div class="alert">
    <% @contact.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  
  <%=form.submit%>

<%end%>
