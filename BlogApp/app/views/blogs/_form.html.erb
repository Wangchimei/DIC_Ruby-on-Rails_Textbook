<%= form_with(model: @blog, local: true, url: new_or_edit) do |f|%>
  
  <% if @blog.errors.any? %>
    <div class="error_msg">
      <% @blog.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

<div>
<%= f.label :title %>
<%= f.text_field :title %>
</div>

<div>
<%= f.label :body %>
<%= f.text_field :body %>
</div>

<div>
<%= f.submit %>
</div>

<% end %>

<%= link_to "Back", blogs_path %>