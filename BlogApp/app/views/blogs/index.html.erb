<%= notice %>

<h2>Blogs</h2>
<p><%= link_to 'New post', new_blog_path %></p>

<table>
  <thead>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @blog.each do |blog|%>
      <tr>
        <td><%= blog.title.upcase%></td>
        <td><%= blog.body%></td>
        <td><%= link_to 'Show', blog_path(blog) %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Delete', blog_path(blog), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>